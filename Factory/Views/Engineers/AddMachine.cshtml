@using System.Collections.Generic;
@model Factory.Models.Engineer

<h2>Add a Machine</h2>

<h4>Add a Machine that this engineer is licensed to reapair: @Html.DisplayFor(model => model.EngineerName)</h4>
<div class="wrapper">
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select Machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" />
}
</div>
<hr />

<p>@Html.ActionLink("Back to engineer list", "Index")</p>