@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Details</h2>

<table class="table">
  <thead>
    <tr>
      <th>
        Machine Name
      </th>
      <th>
        Licensed Engineers
      </th>
      <th>
        Edit or Delete
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        @Html.DisplayFor(model => model.MachineName)
      </td>
      <td>
        <ul class="list-unstyled">
        @foreach (var join in Model.JoinEngineerMachine)
        {
          <li>@join.Engineer.EngineerName</li>
        }
        </ul>
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = Model.MachineId }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.MachineId })
      </td>
    </tr>
  </tbody>
</table>
<hr />
<p class="btn btn-outline-secondary role="button">@Html.ActionLink("Back to Machine List", "Index")</p>