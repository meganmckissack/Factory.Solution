@{
  Layout = "_Layout";
}

@using System.Collections.Generic;
@model Factory.Models.Machine

<h2>Add an Engineer</h2>

<h4>Add an Engineer licensed to repair this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to machine list", "Index")</p>